user:
  vault:
    exists: true
    home: "{{vault_config_path}}"
    shell: "{{vault_user_shell}}"

group:
  vault:
    exists: true

file:
  "{{vault_bin_dest}}vault":
    exists: true
    mode: "0555"
    owner: root
    group: root
    filetype: file
  "{{vault_data_path}}":
    exists: true
    mode: "0777"
    owner: "{{vault_user}}"
    group: "{{vault_group}}"
    filetype: directory
  "{{vault_config_path}}/tls":
    exists: true
    mode: "0777"
    owner: "{{vault_user}}"
    group: "{{vault_group}}"
    filetype: directory
  "{{vault_config_path}}/listener.hcl":
    exists: true
    mode: "0777"
    owner: "{{vault_user}}"
    group: "{{vault_group}}"
    filetype: file
  "{{vault_config_path}}/replication.hcl":
    exists: true
    mode: "0777"
    owner: "{{vault_user}}"
    group: "{{vault_group}}"
    filetype: file
  "{{vault_config_path}}/telemetry.hcl":
    exists: true
    mode: "0777"
    owner: "{{vault_user}}"
    group: "{{vault_group}}"
    filetype: file

service:
  vault:
    enabled: true
    running: false

port:
  tcp:22:
    listening: true
  tcp6:22:
    listening: true
  tcp:8200:
    listening: false
  tcp:8201:
    listening: false
